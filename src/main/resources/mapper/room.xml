    <select id="selRoomInf" parameterType="SearchDto" resultType="RoomDto">
        SELECT ROOM_NO, TEMP, HUM, GAS
            ,DUST, LIGHT, MEASURE_TIME
        FROM IOT_INF
        <where>
            <if test="roomNo != null">AND ROOM_NO = #{roomNo}</if>
        </where>
        <!--
        <if test="empMobile != null">AND EMP_MOBILE LIKE CONCAT('%', #{empMobile}, '%')</if>
        <if test="joinDate != null">AND JOIN_DATE = #{joinDate}</if>
        <if test="retireDate != null">AND RETIRE_DATE = #{retireDate}</if>
        <if test="status  != null and status != 'ALL'">AND STATUS = #{status}</if>
            -->
    </select>

    <select id="selAllRoomInf" resultType="RoomDto">
        SELECT * FROM IOT_INF
        WHERE MEASURE_TIME = ( SELECT MAX(MEASURE_TIME) FROM IOT_INF )
    </select>


