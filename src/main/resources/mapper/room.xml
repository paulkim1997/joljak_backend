    <select id="selSvcUserList" parameterType="SearchDto" resultType="SvcUserDto">
        SELECT USER_ID, USER_MOBILE, USER_NM, USER_EMAIL, PWD
        , BIRTHDAY, GENDER, AUTH_INFO, SIGNUP_DT, LEAVE_DT
